.slider-main
  height 450px
  margin 5px 0 40px
  background-color white
  border 1px solid gainsboro
  p
    margin 0
  .slick-list, .slick-track, .slick-slide
    height 100%

  &__item
    position relative

  &__item-img
    position absolute
    top 0
    left 0

  &__item-content
    width 60%
    height 100%
    padding 100px 45px 50px
    position absolute
    top 0
    left 0

  &__item-text
    overflow hidden
    color white
    font-family nautilus, sans-serif
    font-size 51px
    font-weight 400
    text-shadow 0 0 3px rgba(black, 0.5)
    line-height 1.25em
    max-height calc(1.25em*3 + 5px)
    padding-bottom 5px
    padding-left 2px
    margin-bottom 20px
    opacity 1
    transition 0.2s linear
    .loading &
      opacity 0

  &__btn
    color white
    font-weight 400
    font-size 16px
    line-height 1.1em
    padding 9px 25px 9px
    background-color rgba(black, 0.71)
    border 1px solid rgba(white, 0.71)
    &:hover,
    &:focus,
    &.focus
      color white
      background-color rgba(black, 0.85)
    &:active,
    &.active
      box-shadow inset 0 3px 5px rgba(0, 0, 0, .125)
    .btn__icon
      margin-left 10px
