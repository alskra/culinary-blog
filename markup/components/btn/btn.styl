.btn
  &__label
    display inline-block
    vertical-align top
    text-overflow ellipsis

  &__icon
    display inline-block
    vertical-align top

  &_1
    color white
    font-weight 500
    font-size 14px
    line-height 1.1em
    padding 10px 15px 9px
    background-color $green-1
    &:hover,
    &:focus,
    &.focus
      color white
      background-color lighten($green-1, 10%)
    &:active,
    &.active
      box-shadow inset 0 3px 5px rgba(0, 0, 0, .125)