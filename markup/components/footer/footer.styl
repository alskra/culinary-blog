.footer
  display table-row
  color #3e3f3a
  font-size rem-calc(14)
  line-height 1.4
  height 0
  background-color #fff
  p
    &:last-child
      margin 0
  .social-networks
    margin 32px 0 0

  &__inner
    &_1
      padding 25px 0
      border-top 1px solid gainsboro
      border-bottom 1px solid gainsboro

    &_2
      font-size rem-calc(11)
      font-weight 500
      text-align center
      padding 25px 0
      a
        color inherit
        text-decoration underline
        &:hover, &:focus
          color $green-1
          text-decoration none

  &__logo
    display table
    color #3e3f3a
    text-decoration none
    font-family nautilus, sans-serif
    font-size 24px
    line-height 1em
    text-align center
    white-space nowrap
    margin 0
    &:hover, &:focus
      color #3e3f3a
      text-decoration none

  &__logo-img
    display block
    width 86px
    margin 0 auto -8px

  &__nav
    text-align right
    margin 33px 0

  &__nav-item
    display inline-block
    vertical-align top
    color inherit
    text-decoration none
    margin-left 23px
    &:hover, &:focus
      color $green-1
      text-decoration none




