.modal
  padding 40px 35px
  max-width 50vw
  background-color white
  box-shadow 0 0 14px rgba(202, 202, 202, 0.75)

  &_privacy-policy
    color #3e3f3a
    font-size rem-calc(12)
    line-height (15/12)
    font-weight 500

    h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6
      text-transform uppercase
      font-size rem-calc(12)
      line-height (15/12)
      margin 0 0 1rem
    section
      margin 0 0 2rem
    p
      margin 0 0 1rem
    ul
      list-style none
      padding 0
      margin 0 0 1rem
      li
        &:before
          content '-\00A0'
