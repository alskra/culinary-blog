.article-item
  display inline-block
  vertical-align top
  font-size rem-calc(14)
  line-height (20/14)em
  p
    display inline

  &__img
    display block
    overflow hidden
    margin-bottom 10px
    &:hover, &:focus
      &~{$p}__title {$p}__title-link
        color $green-1

  &__img-inner
    display block
    width 100%

  &__date
    display block
    font-size 12px
    line-height 1em
    font-weight 300
    font-style italic
    margin-bottom 10px

  &__title
    font-size rem-calc(16)
    font-weight 600
    line-height (22/16)em
    text-transform uppercase
    margin 0 0 5px

  &__title-link
    display block
    overflow hidden
    color inherit
    text-decoration none
    max-height (22/16)em*2
    line-clamp 2
    &:hover, &:focus
      color $green-1
      text-decoration underline

  &__content
    overflow hidden
    max-height (20/14)em*5
    line-clamp 5