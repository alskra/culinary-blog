.section
  clearfix()
  margin-bottom 30px
  p
    &:last-child
      margin 0

  &_1
    & {$p}__header
      margin-bottom 30px

    & {$p}__title
      font-size rem-calc(19)
      font-weight 500
      margin 0 0 10px

    & {$p}__header-bottom
      display table
      font-family nautilus, sans-serif
      font-size rem-calc(15)
      line-height 1.25em
      width 100%
      min-height 1.25em

    & {$p}__header-line
      display table-cell
      vertical-align middle
      width 100%
      padding-right 20px
      &:before
        content ''
        display block
        border-top 1px solid $green-1
      &_no-padding
        padding-right 0

    & {$p}__header-link
      display table-cell
      vertical-align middle
      white-space nowrap
      text-decoration none
      &:hover, &:focus
        text-decoration none

    & {$p}__header-category
      color $green-1
      display table-cell
      vertical-align middle
      white-space nowrap

  &_2
    font-size rem-calc(16)

  &_3
    margin-bottom 60px

    & {$p}__title
      font-size rem-calc(37)
      margin-bottom $line-height-computed*2.2

    & {$p}__cols
      clearfix()
      margin-bottom $line-height-computed*2

    & {$p}__col
      float left

      &_1
        width 50%

      &_2
        width 50%
        padding-left 60px

  &_4
    font-family nautilus, sans-serif
    font-size rem-calc(23)
    line-height (46/23)em
    ol
      list-style-position inside
      padding 0

    & {$p}__title
      font-family nautilus, sans-serif
      font-size rem-calc(29)
      margin-bottom ($line-height-computed/2)


